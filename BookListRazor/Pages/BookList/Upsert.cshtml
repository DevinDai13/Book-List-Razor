@page
@model BookListRazor.Pages.BookList.UpsertModel
@{
    ViewData["Title"] = "Upsert";
}

<br />
<h1 class="text-info">@(Model.Book.Id!=0? "Edit Book Record" : "Add New Book Record")</h1>
<br />

<div class="border-container" style="padding:30px;">
    <form method="post">
        @if (Model.Book.Id != 0)
        {
            <input type="hidden" asp-for="Book.Id" />
        }

        <div class="form-group row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-3">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
            <span asp-validation-for="Book.Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
            <span asp-validation-for="Book.Author" class="text-danger"></span>

        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">@(Model.Book.Id!=0? "Save":"Add")</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back To Book List</a>
            </div>
        </div>

    </form>
</div>

<!--This part makes sure that the error/message thing is done on the client side and not posting back
    the validation should be done on both the server side and the client side-->
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


